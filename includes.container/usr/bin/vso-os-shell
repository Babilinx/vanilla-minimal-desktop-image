#!/bin/sh

no_reset_flag=""

while [ $# -gt 0 ]; do
    case "$1" in
        -n|--no-reset)
            no_reset_flag="--no-reset"
            shift
            ;;
        *)
            break
            ;;
    esac
done

if [ ! -d ~/.vso-os-shell/history ]; then
    mkdir -p ~/.vso-os-shell/history
fi

echo "(`date +%Y%m%d-%H:%M:%S`) -> $@" >> ~/.vso-os-shell/history/`date +%Y%m%d`.log
/usr/bin/vso run $no_reset_flag /usr/bin/os-shell "$@"
